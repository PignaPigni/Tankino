<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true"
    tools:context="com.example.testbluetooth3.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:onClick="connect"
        >
    </Button>

    <GridLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/leftCrawlerForwardButton"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/arrow_forward"
            android:onClick="leftCrowlerForward"
            />
        <Button
            android:layout_column="1"
            android:layout_row="0"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/rightCrawlerForwardButton"
            android:layout_column="2"
            android:layout_row="0"
            android:text="@string/arrow_forward"
            android:onClick="rightCrowlerForward"
            />
        <Button
            android:layout_column="0"
            android:layout_row="1"
            android:visibility="invisible"
            />
        <Button
            android:layout_column="1"
            android:layout_row="1"
            android:visibility="invisible"
            />
        <Button
            android:layout_column="2"
            android:layout_row="1"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/leftCrawlerBackwardButton"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/arrow_backward"
            android:onClick="leftCrowlerBackward"
            />
        <Button
            android:layout_column="1"
            android:layout_row="2"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/rightCrawlerBackwardButton"
            android:layout_column="2"
            android:layout_row="2"
            android:text="@string/arrow_backward"
            android:onClick="rightCrowlerBackward"
            />
    </GridLayout>


</RelativeLayout>