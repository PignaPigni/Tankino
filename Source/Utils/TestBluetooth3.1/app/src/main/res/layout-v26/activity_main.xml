<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true"
    tools:context="com.example.testbluetooth3.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="connect"
        android:text="Connect"></Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <SeekBar
            android:id="@+id/seekBarLeft"
            android:layout_width="83dp"
            android:layout_height="231dp"
            android:focusableInTouchMode="true"

            android:max="0"
            android:min="127"
            android:onClick="getLeftCrowlerSpeed"
            android:progress="63"
            android:rotation="90" />

        <SeekBar
            android:id="@+id/seekBarRight"
            android:layout_width="83dp"
            android:layout_height="231dp"
            android:max="255"
            android:min="128"
            android:onClick="getRightCrowlerSpeed"
            android:progress="192"
            android:rotation="90" />


    </LinearLayout>


</RelativeLayout>