<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true"
    tools:context="com.example.testbluetooth3.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="connect"
        android:text="Connect"></Button>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="3">

        <SeekBar
            android:id="@+id/seekBarLeft"
            android:layout_width="83dp"
            android:layout_height="231dp"

            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:max="127"

            android:onClick="getLeftCrowlerSpeed"

            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:rotation="90" />
        <SeekBar
            android:id="@+id/seekBarRight"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="83dp"
            android:layout_height="231dp"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:max="255"
            android:min="128"

            android:onClick="getRightCrowlerSpeed"
            android:rotation="90" />

        <Button
            android:layout_row="0"
            android:layout_column="1"
            android:visibility="invisible" />

        <Button
            android:layout_row="1"
            android:layout_column="1"
            android:visibility="invisible" />

        <Button
            android:layout_row="2"
            android:layout_column="1"
            android:visibility="invisible" />


    </GridLayout>


</RelativeLayout>